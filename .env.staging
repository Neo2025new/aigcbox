# Staging Environment Configuration
# 复制这个文件并重命名为 .env.local (Git 不会跟踪)

# Environment
NODE_ENV=staging
NEXT_PUBLIC_APP_URL=https://your-staging-domain.vercel.app

# Gemini API
GEMINI_API_KEY=your-staging-gemini-api-key

# Security Configuration
ALLOWED_ORIGINS=https://your-staging-domain.vercel.app,http://localhost:3000
CRON_SECRET=your-staging-cron-secret

# Rate Limiting (Staging - 更宽松的限制)
RATE_LIMIT_PER_MINUTE=20
RATE_LIMIT_PER_HOUR=200

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB for staging
MAX_FILES_PER_REQUEST=8

# Logging Configuration
LOG_LEVEL=debug
ENABLE_SECURITY_LOGS=true

# Monitoring (Optional - Staging)
# SENTRY_DSN=your-staging-sentry-dsn
# DATADOG_API_KEY=your-staging-datadog-key

# Database (Optional - Staging)
# DATABASE_URL=postgresql://user:password@staging-db:5432/dbname

# Redis (Optional - Staging)
# REDIS_URL=redis://staging-redis:6379
# UPSTASH_REDIS_REST_URL=https://your-staging-upstash-endpoint.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-staging-upstash-token

# Content Moderation (Optional)
ENABLE_CONTENT_MODERATION=false