# Production Environment Configuration
# 这些值应该在 Vercel 控制台中设置，而不是提交到代码库

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-production-domain.com

# Gemini API
GEMINI_API_KEY=your-production-gemini-api-key

# Security Configuration
ALLOWED_ORIGINS=https://your-production-domain.com
CRON_SECRET=your-production-cron-secret-strong-password

# Rate Limiting (Production - 严格限制)
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# File Upload Configuration
MAX_FILE_SIZE=5242880   # 5MB for production
MAX_FILES_PER_REQUEST=4

# Logging Configuration
LOG_LEVEL=info
ENABLE_SECURITY_LOGS=true

# Monitoring (Production)
# SENTRY_DSN=your-production-sentry-dsn
# DATADOG_API_KEY=your-production-datadog-key
# NEW_RELIC_LICENSE_KEY=your-production-newrelic-key

# Database (Production)
# DATABASE_URL=postgresql://user:password@production-db:5432/dbname

# Redis (Production)
# REDIS_URL=redis://production-redis:6379
# UPSTASH_REDIS_REST_URL=https://your-production-upstash-endpoint.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-production-upstash-token

# Content Moderation
ENABLE_CONTENT_MODERATION=true
# MODERATION_API_KEY=your-production-moderation-key